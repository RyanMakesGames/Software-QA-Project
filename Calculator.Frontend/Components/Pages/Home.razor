@page "/"

<PageTitle>Calculator</PageTitle>
<style>
    .container{
        width: 100%;
        height: 100vh;
        background: #e2e6eb;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .calculator{
        background: #ffffff;
        padding: 20px;
    }

    .calculator form input{
        border: 1;
        outline: 0;
        height: 25px;
        background: #ebebeb;
        font-size: 13px;
        color: #000000;
        cursor: pointer;
        margin: 5px;
    }

    .display{
        display: flex;
        width: 500px;
        background: #FFECD7;
        justify-content: center;
    }

    form .input{
        display: flex;
        justify-content: flex-end;
        margin: 10px 0;
    }

    form .input input{
        text-align: right;
        flex: 1;
        font-size: 20px;
        box-shadow: none;
        border-radius: 5px;
        width: 200px;
    }

    form .header input{
        margin-left: 150px;
        border-radius: 5px;
        width: 200px;
    }

    form .button input{
        border-radius: 5px;
        width: 200px;
    }
</style>

<body>
    <div class="container">
        <div class="calculator">
            <form>
                <div class="header">
                    <h1>
                        Calculator
                        <input type="button" value="Clear">
                    </h1>
                </div>
                <div class="display">
                    <input type="text" name="display1" value="Enter a value(s) below and select an operation.">
                </div>
                <div class="header">
                    <label for="ainput">Input A</label>
                    <label for="binput">Input B</label>
                </div>
                <div class="input">
                    <input id="InputA" name="inpA" type="text" value="0">
                    <input id="InputB" name="inpB" type="text" value="0">
                </div>
                <div>
                    <table>
                        <tr>
                            <th>A and B</th>
                            <th>A only</th>
                        </tr>
                    </table>
                </div>
                <div class="button">
                    <input type="button" value ="A + B" onclick="display1.value = @Plus()">
                    <input type="button" value ="A!">
                </div>
                <div class="button">
                    <input type="button" value ="A - B">
                    <input type="button" value ="sin A">
                </div>
                <div class="button">
                    <input type="button" value ="A * B">
                    <input type="button" value ="cos A">
                </div>
                <div class="button">
                    <input type="button" value ="A / B">
                    <input type="button" value ="tan A">
                </div>
                <div class="button">
                    <input type="button" value ="A == B">
                    <input type="button" value ="1 / A">
                </div>
                <div class="button">
                    <input type="button" value ="A ^ B">
                </div>
                <div class="button">
                    <input type="button" value ="A log B">
                </div>
                <div class="button">
                    <input type="button" value ="A root B">
                </div>
            </form>
        </div>
    </div>
</body>

@code {
// Methods
// A + B
private static double Plus(double a, double b){
    return a + b;
}
// A - B
static double Minus(double a,double b){
    return a - b;
}
// A * B
static double Multiply(double a, double b){
    return a * b;
}
// A / B
static double Divide(double a, double b){
    return a / b;
}
// A ^ B
static double Power(double a, double b){
    return Math.Pow(a, b);
}
// A log B
static double Log(double a, double b){
    return Math.Log(a, b);
}
// A root B
static double Root(double a, double b){
    return Math.Pow(a, 1.0 / b);
}
// A == B

// A!
static double Factorial(double a){
    if(a == 0){
        return 1;
    }
    else if(a < 0){
        return a * Factorial(a++);
    }
    else{
        return a * Factorial(a--);
    }
    
}
// sin A
static double Sin(double a){
    return Math.Sin(a);
}
// cos A
static double Cos(double a){
    return Math.Cos(a);
}
// tan A
static double Tan(double a){
    return Math.Tan(a);
}
