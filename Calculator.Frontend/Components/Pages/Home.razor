@page "/"

<PageTitle>Calculator</PageTitle>
<style>
    .container{
        width: 100%;
        height: 100vh;
        background: #e2e6eb;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .calculator{
        background: #ffffff;
        padding: 20px;
    }

    .calculator form input{
        border: 1;
        outline: 0;
        width: 200px;
        height: 25px;
        background: #ebebeb;
        font-size: 13px;
        color: #000000;
        cursor: pointer;
        margin: 5px;
    }

    form .display{
        display: flex;
        flex: 1;
        width: 70px;
        background: #FFECD7;
        user-select: none;
        justify-content: center;
    }

    form .input{
        display: flex;
        justify-content: flex-end;
        margin: 10px 0;
    }

    form .input input{
        text-align: right;
        flex: 1;
        font-size: 20px;
        box-shadow: none;
        border-radius: 5px;
    }

    form .header input{
        margin-left: 75px;
        border-radius: 5px;
    }

    form .button input{
        border-radius: 5px;
    }
</style>

<body>
    <div class="container">
        <div class="calculator">
            <form>
                <div class="header">
                    <h1>
                        Calculator
                        <input type="button" value="Clear">
                    </h1>
                </div>
                <div class="display">
                    Enter value(s) below and select an operation.
                </div>
                <div>
                    <label for="ainput">Input A</label>
                    <label for="binput">Input B</label>
                </div>
                <div class="input">
                    <input type="text" name="inputA">
                    <input type="text" name="inputB">
                </div>
                <div>
                    <table>
                        <tr>
                            <th>A and B</th>
                            <th>A only</th>
                        </tr>
                    </table>
                </div>
                <div class="button">
                    <input type="button" value ="A + B" onclick="plus(inputA, inputB)">
                    <input type="button" value ="A!">
                </div>
                <div class="button">
                    <input type="button" value ="A - B" onclick="minus(inputA, inputB)">
                    <input type="button" value ="sin A">
                </div>
                <div class="button">
                    <input type="button" value ="A * B" onclick="multiply(inputA, inputB)">
                    <input type="button" value ="cos A">
                </div>
                <div class="button">
                    <input type="button" value ="A / B" onclick="divide(inputA, inputB)">
                    <input type="button" value ="tan A">
                </div>
                <div class="button">
                    <input type="button" value ="A == B">
                    <input type="button" value ="1 / A">
                </div>
                <div class="button">
                    <input type="button" value ="A ^ B">
                </div>
                <div class="button">
                    <input type="button" value ="A log B">
                </div>
                <div class="button">
                    <input type="button" value ="A root B">
                </div>
            </form>
        </div>
    </div>
</body>
